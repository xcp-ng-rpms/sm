@@ -972,12 +972,12 @@ class LinstorVolumeManager(object):
         deleted VDI.
         """
 
-        assert volume_uuid != new_volume_uuid
-
         self._logger(
             'Trying to update volume UUID {} to {}...'
             .format(volume_uuid, new_volume_uuid)
         )
